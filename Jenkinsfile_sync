pipeline {
    agent {
        label "$AGENT_LABEL"
    }

    environment {
        EXTHM_SOURCE_PATH = "${EXTHM_SOURCE_BASEPATH}/exthm-${TARGET_VERSION}"
    }

    stages {
        stage('Sync Projects') {
            steps {
                checkout scm
                sh label: '', script: 'bash ./sync.bash'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
